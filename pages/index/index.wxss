swiper-item {
  width: 100% !important;
  height: 100%;
  transform: scale(1) !important; /* 取消缩放效果 */
  opacity: 1 !important;
  padding: 0;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 0; /* 移除圆角 */
  object-fit: cover;
}

/* 原有样式保持不变 */
.intro-section {
  padding: 32rpx;
  background: #f8f5f2;
  margin: 24rpx;
  border-radius: 12rpx;
}

/* 新增自定义导航栏样式 */
.custom-nav {
  position: fixed;
  left: 32rpx;
  z-index: 999;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 28rpx; /* 与facility-info一致 */
  color: #7a6e5f;   /* 使用场地信息同款颜色 */
  font-weight: 600;
  padding: 16rpx 32rpx; /* 减少垂直padding */
  border-bottom: 0.5rpx solid rgba(0,0,0,0.05); /* 细化分割线 */
}

/* 新增场地信息样式 */
.facility-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx; /* 上下减少4rpx */
  margin: -2rpx -5rpx -5rpx; /* 上方负margin消除间隙 */
  background: #fff;
  border-radius: 24rpx 24rpx 12rpx 12rpx; /* 上左/上右 24rpx | 下右/下左 12rpx */
  min-height: 80rpx; /* 减少16rpx */
  box-shadow: 0 0 30rpx rgba(0,0,0,0.08);
  position: relative;
  top: -4rpx; /* 微调定位 */
  z-index: 2;
  border: 1rpx solid rgba(0,0,0,0.03); /* 添加细微边框增强立体感 */
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.4;
  padding-right: 32rpx;
  margin-left: 16rpx; /* 增加左侧间距 */
}

.navi-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  margin-right: 16rpx; /* 增加右侧间距 */
}

.navi-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 6rpx;
}

.navi-label {
  font-size: 22rpx; /* 缩小2rpx */
  color: #7a6e5f;
}

/* 优化分类导航为标签页样式 */
.activity-nav {
  background: #fff;
  margin: -10rpx 30rpx 40rpx; /* 上方负margin抵消间距 */
  border-radius: 16rpx;
  box-shadow: 0 8rpx 30rpx -10rpx rgba(0,0,0,0.08);
}

.nav-list {
  display: flex;
  padding: 20rpx 0;
  justify-content: space-around;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.2s ease;
}

.nav-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: #5a4d3e;
  transition: width 0.3s ease;
}

.nav-item.active::after {
  width: 60%;
}

.nav-text {
  font-size: 30rpx;
  color: #7a6e5f;
}

.nav-item.active .nav-text {
  color: #5a4d3e;
  font-weight: 500;
}
