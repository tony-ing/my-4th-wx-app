/* 页面容器 */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    padding-top: 0 !important; /* 移除安全区域padding */
}

.scroll-container {
    flex: 1;
    overflow: hidden;
    padding-top: 160rpx; /* 将安全区域padding移到这里 */
}

/* 顶部形象图 */
.main-image {
    width: 100%;
    display: block;
    height: 400rpx;
    object-fit: cover;
}

/* 文字介绍卡片 */
.intro-card {
    background: #fff;
    padding: 40rpx;
    margin: 60rpx 30rpx 60rpx;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
    box-sizing: border-box;
    width: calc(100% - 60rpx);
    position: relative;
    z-index: 2;
    background: rgba(255,255,255,0.95);
    margin-bottom: 100rpx; /* 增加底部留白 */
}

.title {
    display: block;
    font-size: 36rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 20rpx;
    font-family: 'STSong', serif; /* 使用衬线字体增加禅意 */
}

.desc {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    text-align: justify;
    word-break: break-all;
    overflow-wrap: break-word;
}

/* 横向滚动区 */
.img-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0; /* 增加上下间距 */
}

.img-item {
  display: inline-block;
  width: 600rpx;  /* 改为固定宽度 */
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); /* 增加立体感 */
}

/* 调整首图左边距 */
.img-item:first-child {
  margin-left: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 文字内容区 */
.content-section {
  padding: 40rpx 20rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #5a4d3e;
  margin-bottom: 30rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.6;
}

/* 新增轮播样式 */
.swiper-container {
  width: 750rpx;
  height: 820rpx; 
  padding: 0 30rpx;
  margin: 0 auto 30rpx;
  /* 新增背景色覆盖测试样式 */
  background: transparent !important;
}

/* 轮播项动态效果 */
swiper-item {
  height: 820rpx; /* 与容器高度一致 */
  box-sizing: border-box;
  transform: scale(0.96); /* 仅缩小不透明 */
  transition: transform 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

swiper-item.active {
  transform: scale(1);
  /* 保持不透明 */
  z-index: 1; /* 确保当前项在上层 */
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片完整显示 */
  border-radius: 16rpx;
  transition: transform 0.3s ease;
}

/* 原有样式保持不变 */
.intro-section {
  padding: 32rpx;
  background: #f8f5f2;
  margin: 24rpx;
  border-radius: 12rpx;
}

/* 新增自定义导航栏样式 */
.custom-nav {
  position: fixed;
  left: 32rpx;
  z-index: 999;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 40rpx;
  color: #5a4d3e;
  font-weight: 600;
  font-family: 'STKaiti', serif;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  line-height: 1.2; /* 确保文字垂直居中 */
}

/* 新增场地信息样式 */
.facility-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 30rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 12rpx;
  min-height: 96rpx; /* 固定最小高度 */
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.4;
  padding-right: 40rpx;
}

.navi-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.navi-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.navi-label {
  font-size: 24rpx;
  color: #7a6e5f;
}
