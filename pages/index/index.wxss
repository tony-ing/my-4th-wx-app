/* 页面容器 */
.container {
    background: #f5f5f5;
    min-height: 100vh;
}

/* 顶部形象图 */
.main-image {
    width: 100%;
    display: block;
    height: 400rpx;
    object-fit: cover;
}

/* 文字介绍卡片 */
.intro-card {
    background: #fff;
    padding: 40rpx;
    margin: 30rpx;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
    box-sizing: border-box;
    width: calc(100% - 60rpx);
}

.title {
    display: block;
    font-size: 36rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 20rpx;
    font-family: 'STSong', serif; /* 使用衬线字体增加禅意 */
}

.desc {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    text-align: justify;
    word-break: break-all;
    overflow-wrap: break-word;
}

/* 横向滚动区 */
.img-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0; /* 增加上下间距 */
}

.img-item {
  display: inline-block;
  width: 600rpx;  /* 改为固定宽度 */
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); /* 增加立体感 */
}

/* 调整首图左边距 */
.img-item:first-child {
  margin-left: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 文字内容区 */
.content-section {
  padding: 40rpx 20rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #5a4d3e;
  margin-bottom: 30rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.6;
}
