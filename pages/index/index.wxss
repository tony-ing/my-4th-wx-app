/* 页面容器 */
.container {
    display: block !important;
    width: 100%;
    min-height: 100vh;
    background: #f5f5f5;
    /* 新增安全区域 */
    padding-top: 180rpx; /* 胶囊按钮高度+状态栏高度 */
    box-sizing: border-box;
    /* 添加其他必要样式 */
}

/* 顶部形象图 */
.main-image {
    width: 100%;
    display: block;
    height: 400rpx;
    object-fit: cover;
}

/* 文字介绍卡片 */
.intro-card {
    background: #fff;
    padding: 40rpx;
    margin: 60rpx 30rpx 60rpx;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
    box-sizing: border-box;
    width: calc(100% - 60rpx);
    position: relative;
    z-index: 2;
    background: rgba(255,255,255,0.95);
}

.title {
    display: block;
    font-size: 36rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 20rpx;
    font-family: 'STSong', serif; /* 使用衬线字体增加禅意 */
}

.desc {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    text-align: justify;
    word-break: break-all;
    overflow-wrap: break-word;
}

/* 横向滚动区 */
.img-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0; /* 增加上下间距 */
}

.img-item {
  display: inline-block;
  width: 600rpx;  /* 改为固定宽度 */
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); /* 增加立体感 */
}

/* 调整首图左边距 */
.img-item:first-child {
  margin-left: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 文字内容区 */
.content-section {
  padding: 40rpx 20rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #5a4d3e;
  margin-bottom: 30rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.6;
}

/* 新增轮播样式 */
.swiper-container {
  width: 690rpx;
  height: 700rpx;
  margin: 0 auto 30rpx; /* 去除顶部margin */
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 新增：确保图片容器比例 */
.swiper-item {
  width: 100%;
  height: 100%;
}

/* 原有样式保持不变 */
.intro-section {
  padding: 32rpx;
  background: #f8f5f2;
  margin: 24rpx;
  border-radius: 12rpx;
}

/* 新增自定义导航栏样式 */
.custom-nav {
  position: fixed;
  left: 32rpx;
  z-index: 999;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 40rpx;
  color: #5a4d3e;
  font-weight: 600;
  font-family: 'STKaiti', serif;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  line-height: 1.2; /* 确保文字垂直居中 */
}

/* 新增场地信息样式 */
.facility-info {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  margin: 40rpx 30rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 28rpx;
  color: #7a6e5f;
  margin-right: 40rpx;
}
