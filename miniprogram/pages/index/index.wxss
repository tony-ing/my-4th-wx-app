  height: 100%;
  transform: scale(1) !important; /* 取消缩放效果 */
  opacity: 1 !important;
  padding: 0;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 0; /* 移除圆角 */
  object-fit: cover;
}

/* 原有样式保持不变 */
.intro-section {
  padding: 32rpx;
  background: #f8f5f2;
  margin: 24rpx;
  border-radius: 12rpx;
}

/* 新增自定义导航栏样式 */
.custom-nav {
  position: fixed;
  left: 32rpx;
  z-index: 999;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 34rpx;
  line-height: 1.2;
  top: 50% !important;
  transform: translateY(-50%);
  left: 32rpx !important;
}

/* 新增场地信息样式 */
.facility-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx; /* 上下减少4rpx */
  margin: -2rpx -5rpx -5rpx; /* 上方负margin消除间隙 */
  background: #fff;
  border-radius: 24rpx 24rpx 12rpx 12rpx; /* 上左/上右 24rpx | 下右/下左 12rpx */
  min-height: 80rpx; /* 减少16rpx */
  box-shadow: 0 0 30rpx rgba(0,0,0,0.08);
  position: relative;
  top: -4rpx; /* 微调定位 */
  z-index: 2;
  border: 1rpx solid rgba(0,0,0,0.03); /* 添加细微边框增强立体感 */
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.4;
  padding-right: 32rpx;
  margin-left: 16rpx; /* 增加左侧间距 */
}

.navi-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  margin-right: 16rpx; /* 增加右侧间距 */
}

.navi-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 6rpx;
}

.navi-label {
  font-size: 22rpx; /* 缩小2rpx */
  color: #7a6e5f;
}

/* 优化分类导航为标签页样式 */
.activity-nav {
  background: #fff;
  margin: 20rpx 30rpx 40rpx; /* 修正负margin导致的布局异常 */
  border-radius: 16rpx;
  box-shadow: 0 8rpx 30rpx -10rpx rgba(0,0,0,0.08);
  position: relative;
  z-index: 1;
}

.nav-list {
  display: flex;
  justify-content: space-around;
  position: relative;
  z-index: 2;
  background: #fff;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.2s ease;
}

.nav-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: #5a4d3e;
  transition: width 0.3s ease;
}

.nav-item.active::after {
  width: 60%;
}

.nav-text {
  font-size: 30rpx;
  color: #7a6e5f;
}

.nav-item.active .nav-text {
  color: #5a4d3e;
  font-weight: 500;
}

/* 新增活动列表样式 */
.category-section {
  padding: 0 30rpx;
  margin-bottom: 100rpx;
}

.activity-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 50rpx; /* 再增加10rpx */
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  position: relative;
  overflow: hidden;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.activity-name {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.activity-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  color: #666;
}

.activity-status.active {
  background: #e3f2fd;
  color: #1976d2;
}

.activity-status.free {
  background: #e8f5e9;
  color: #388e3c;
}

.activity-info {
  margin-bottom: 28rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.info-item::before {
  content: '·';
  margin-right: 8rpx;
  color: #b2bec3;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price {
  font-size: 36rpx;
  color: #2d3436;
  font-weight: 600;
}

.price.free {
  color: #388e3c;
}

.book-btn {
  background: #2d3436;
  color: #fff !important;
  border-radius: 40rpx;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

.book-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.empty-tip {
  text-align: center;
  color: #b2bec3;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 最终导航栏样式 */
.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: var(--status-bar-height) var(--nav-padding) 0;
  height: auto;
  z-index: 1000;
  background: rgba(255,255,255,0.92);
  backdrop-filter: blur(20rpx);
}

.nav-title {
  font-size: 36rpx;
  line-height: var(--capsule-height);
  color: #5a4d3e;
}

/* 新增动态间距计算 */
:host {
  --swiper-margin: calc(var(--scroll-margin) + 20rpx);
  --navBarHeight: 40px; /* 默认值 */
  --tabBarHeight: 140rpx; /* 同步增加20rpx */
}

/* 新增导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1100; /* 确保导航栏在最顶层 */
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1); /* 加强投影区分层级 */
}

.nav-title {
  position: absolute;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

/* 添加过渡动画 */
.category-section {
  transition: all 0.3s ease;
}

/* 通过类名控制显示隐藏 */
.category-section {
  display: none;
}
.category-section.active {
  display: block;
}

/* 优化tabBar定位 */
custom-tab-bar {
  position: fixed;
  bottom: 0;
  height: calc(var(--tabBarHeight) + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 添加安全区域适配 */
@supports (padding-bottom: env(safe-area-inset-bottom)) {
  custom-tab-bar {
    padding-bottom: env(safe-area-inset-bottom);
  }
}

/* 增加最后一个活动项底部间距 */
.activity-item:last-child {
  margin-bottom: 100rpx !important;
}

/* 详情弹窗样式 */
.detail-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  flex-direction: column;
  transition: all 0.3s ease;
  opacity: 0;
  pointer-events: auto; /* 允许弹窗区域交互 */
}

.detail-dialog-mask.show {
  opacity: 1;
  display: flex !important;
}

.detail-dialog {
  background: #fff;
  width: 100%;
  max-height: 70vh;
  border-radius: 16rpx;
  margin: 40rpx;
  transform: none;
}

.detail-dialog-mask.show .detail-dialog {
  transform: translateY(0); /* 显示时回到原位 */
}

.dialog-content {
  flex: 1;
  padding: 0 32rpx;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.detail-title {
  font-size: 36rpx;
  color: #2d3436;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}

.detail-status {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
}

.detail-status.active {
  background: #e3f2fd;
  color: #1976d2;
}

.detail-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #636e72;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.desc-title {
  display: block;
  font-size: 30rpx;
  color: #2d3436;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.desc-content {
  font-size: 28rpx;
  color: #636e72;
  line-height: 1.6;
}

.calendar-section {
  margin: 40rpx 0;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
  display: none;
}

.section-title {
  font-size: 30rpx;
  color: #2d3436;
  margin-bottom: 32rpx;
  display: block;
}

.week-days {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.day-item {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  text-align: center;
}

.day-item.available {
  background: #e8f5e9;
  border: 1rpx solid #388e3c;
}

.day-name {
  display: block;
  font-size: 28rpx;
  color: #2d3436;
  margin-bottom: 8rpx;
}

.day-date {
  display: block;
  font-size: 24rpx;
  color: #636e72;
}

/* 调整底部操作栏样式 */
.dialog-footer {
  padding: 24rpx 32rpx 40rpx;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.book-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #2d3436;
  color: #fff !important;
  border-radius: 48rpx;
}

/* 新增关闭按钮样式 */
.dialog-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  transition: all 0.2s;
}

.dialog-close:active .close-icon {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 添加弹窗显示时的全局锁定 */
.detail-dialog-mask.show + .container {
  pointer-events: none; /* 禁用主页面交互 */
}

.detail-dialog-mask.show ~ .container {
  /* 移除全局锁定 */
}
