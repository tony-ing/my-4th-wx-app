/* 页面容器 */
.container {
    overflow: visible;
    height: auto;
    display: flex;
    flex-direction: column;
    padding-bottom: env(safe-area-inset-bottom); /* 适配底部安全区域 */
    z-index: 1;
    touch-action: pan-y;
    position: relative;
}

.scroll-container {
    flex: 1;
    box-sizing: border-box;
    padding-bottom: 200rpx;
    margin-top: var(--navBarHeight);
    height: calc(100vh - var(--navBarHeight) - var(--tabBarHeight)) !important;
    overflow-y: auto !important;
    -webkit-overflow-scrolling: touch;
    pointer-events: auto !important;
}

/* 顶部形象图 */
.main-image {
    width: 100%;
    display: block;
    height: 400rpx;
    object-fit: cover;
}

/* 文字介绍卡片 */
.intro-card {
    background: #fff;
    padding: 40rpx;
    margin: 40rpx 30rpx 20rpx; /* 上40 左右30 下20 */
    border-radius: 12rpx;
    box-shadow: 0 8rpx 30rpx -10rpx rgba(0,0,0,0.12);
    box-sizing: border-box;
    width: calc(100% - 60rpx);
    position: relative;
    z-index: 2;
    background: rgba(255,255,255,0.95);
    margin-top: 20rpx;
}

.title {
    display: block;
    font-size: 35rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 20rpx;
    font-family: 'STSong', serif; /* 使用衬线字体增加禅意 */
}

.desc {
    font-size: 25rpx;
    color: #666;
    line-height: 1.6;
    text-align: justify;
    word-break: break-all;
    overflow-wrap: break-word;
}

/* 横向滚动区 */
.img-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0; /* 增加上下间距 */
}

.img-item {
  display: inline-block;
  width: 600rpx;  /* 改为固定宽度 */
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); /* 增加立体感 */
}

/* 调整首图左边距 */
.img-item:first-child {
  margin-left: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 文字内容区 */
.content-section {
  padding: 40rpx 20rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #5a4d3e;
  margin-bottom: 30rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #7a6e5f;
  line-height: 1.6;
}

/* 调整轮播样式 */
.swiper-container {
  width: 100%; /* 全屏宽度 */
  height: 680rpx !important; /* 适当降低高度 */
  margin: 0;
  border-radius: 0; /* 移除圆角 */
  margin-top: 0 !important; /* 移除旧设置 */
  position: relative;
  z-index: 1;
  margin-bottom: -6rpx; /* 轮播底部负margin */
  padding-top: 20rpx; /* 增加呼吸空间 */
}
