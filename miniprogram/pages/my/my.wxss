/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx;
  background: #fff;
  margin: 20rpx 30rpx !important;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.login-btn {
  background: #5a4d3e !important;
  color: #fff !important;
  font-size: 32rpx;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  line-height: 1.4;
}

/* 菜单列表 */
.menu-list {
  background: #fff;
  margin: 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 新增样式 */
.user-card {
  position: relative;
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  text-align: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.login-btn {
  background: #09BB07;
  color: white;
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.admin-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #FFB300;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
} 