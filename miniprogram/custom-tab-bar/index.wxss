.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 9999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.text {
  font-size: 22rpx;
  color: #666;
}

.active .text {
  color: #2B9939; /* 主题绿色 */
}

.safe-area {
  height: env(safe-area-inset-bottom);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: inherit;
} 